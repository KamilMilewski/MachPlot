<Window x:Class="MachPlotNamespace.IntersectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Punkty przecięcia" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="Punkty przecięcia przebiegów:" FontWeight="Bold"/>
        <Label Grid.Row="1" x:Name="IDLabelSeries0" Content="-"/>
        <Label Grid.Row="2" x:Name="IDLabelSeries1" Content="-"/>
        <Label Grid.Row="3" Content="To:" FontWeight="Bold"/>
        <ListBox x:Name="intersectionListBox" Grid.Row="4">
            
        </ListBox>
    </Grid>
</Window>

<Window x:Class="MachPlotNamespace.ModuleChooseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ModuleChooseWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Wybierz moduł do uruchomienia:"/>
        <ListBox x:Name="moduleChangeListbox"
                 Grid.Row="1"
                 Height="200"
                 VerticalAlignment="Top"
                 Background="Wheat"
                 Margin="5,5,5,5">
        </ListBox>
        <Button x:Name="chooseButton" Content="Wybierz" Grid.Row="2" Margin="80,5,80,5" Click="chooseButton_Click" />
    </Grid>
</Window>
